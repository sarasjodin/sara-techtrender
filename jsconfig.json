{
  "compilerOptions": {
    "checkJs": true, // Aktivera typkontroll för JS-filer (då behöver vi inte heller ange // @ts-check högst upp i varje .js-fil)
    "allowJs": true, // Tillåt JS-filer i projektet (ej bara TS)
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".parcel-cache"]
}

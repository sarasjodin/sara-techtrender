{
  "source": {
    "include": ["src"],
    "excludePattern": "(node_modules|dist)"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
